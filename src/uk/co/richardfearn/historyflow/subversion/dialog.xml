<?xml version="1.0" encoding="UTF-8"?>

<dialog title="Choose a Subversion file" modal="true" resizable="false">

	<panel layout="GridBagLayout" constraints="BorderLayout.CENTER">
		<label labelfor="textUrl" text="URL:">
			<gridbagconstraints insets="5,5,5,5" fill="GridBagConstraints.NONE" anchor="GridBagConstraints.EAST" gridx="0" gridy="0" weightx="0" weighty="0" />
		</label>
		<textfield id="textUrl" columns="30">
			<gridbagconstraints  insets="5,0,5,5" fill="GridBagConstraints.HORIZONTAL" gridx="1" gridy="0" weightx="1" weighty="0" />
		</textfield>
		
		<label labelfor="textUsername" text="Username:">
			<gridbagconstraints insets="0,5,5,5" fill="GridBagConstraints.NONE" anchor="GridBagConstraints.EAST" gridx="0" gridy="1" weightx="0" weighty="0" />
		</label>
		<textfield id="textUsername" columns="30">
			<gridbagconstraints insets="0,0,5,5" fill="GridBagConstraints.HORIZONTAL" gridx="1" gridy="1" weightx="1" weighty="0" />
		</textfield>
		
		<label labelfor="textPassword" text="Password:">
			<gridbagconstraints insets="0,5,5,5" fill="GridBagConstraints.NONE" anchor="GridBagConstraints.EAST" gridx="0" gridy="2" weightx="0" weighty="0" />
		</label>
		<passwordfield id="textPassword" columns="30">
			<gridbagconstraints insets="0,0,5,5" fill="GridBagConstraints.HORIZONTAL" gridx="1" gridy="2" weightx="1" weighty="0" />
		</passwordfield>
		
		<label labelfor="textFilePath" text="Path to file:">
			<gridbagconstraints insets="0,5,0,5" fill="GridBagConstraints.NONE" anchor="GridBagConstraints.EAST" gridx="0" gridy="3" weightx="0" weighty="0" />
		</label>
		<textfield id="textFilePath" columns="30">
			<gridbagconstraints insets="0,0,0,5" fill="GridBagConstraints.HORIZONTAL" gridx="1" gridy="3" weightx="1" weighty="0" />
		</textfield>
	</panel>
	
	<panel layout="FlowLayout" constraints="BorderLayout.SOUTH">
		<button id="buttonOk" text="OK" action="submit" />
		<button id="buttonCancel" text="Cancel" action="cancel" />
	</panel>

</dialog>
